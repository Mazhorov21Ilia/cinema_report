<UserPasswordScreen>:

    BoxLayout:
        size_hint: (1, 1)  # Растяжение на весь экран
        orientation: 'vertical'
        padding: 160
        spacing: 0
        pos_hint: {'center_y': 0.5}  # Центрирование по вертикали
        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            size: (300, 350)  # Общий размер содержимого
            pos_hint: {'center_x': 0.5}  # Горизонтальное центрирование
            spacing: 15  # Расстояние между элементами

            Label:
                text: 'Смена пароля'
                font_size: 24

            TextInput:
                id: new_password
                hint_text: 'Новый пароль'
                password: True
                multiline: False
                size_hint: (None, None)
                size: (300, 40)

            TextInput:
                id: confirm_password
                hint_text: 'Подтвердите новый пароль'
                password: True
                multiline: False
                size_hint: (None, None)
                size: (300, 40)

            Button:
                text: 'Сохранить'
                size_hint: (None, None)
                size: (300, 50)
                background_color: 0.286, 0.149, 0.42, 1
                on_release:
                    root.save_new_password()

            Button:
                text: 'Отмена'
                size_hint: (None, None)
                size: (300, 50)
                background_color: 0.286, 0.149, 0.42, 1
                on_release:
                    app.root.current = 'home'

<HomeScreen>:
    BoxLayout:
        size_hint: None, None
        size: 400, 600
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        spacing: 20  # Расстояние между кнопками
        padding: 50, 100  # Внутренние отступы (по горизонтали и вертикали)

        Label:
            id: username_label
            text: 'Добро пожаловать!'  # Здесь текст по умолчанию
            font_size: 24

        Button:
            text: 'Мои фильмы'
            background_color: 0.286, 0.149, 0.42, 1
            size: 300, 50  # Фиксированный размер кнопки
            pos_hint: {'center_x': 0.5}  # Центрирование по горизонтали
            on_release:
                app.root.current = 'films'

        Button:
            text: 'Сменить пароль'
            background_color: 0.286, 0.149, 0.42, 1
            size: 300, 50  # Фиксированный размер кнопки
            pos_hint: {'center_x': 0.5}  # Центрирование по горизонтали
            on_release:
                app.root.current = 'user_password'

        Button:
            text: 'Выйти'
            background_color: 0.286, 0.149, 0.42, 1
            size: 300, 50  # Фиксированный размер кнопки
            pos_hint: {'center_x': 0.5}  # Центрирование по горизонтали
            on_release:
                app.root.current = 'login'